<h2>Expense Tracker Dashboard</h2>

<!-- Add/Edit Form -->
<form id="expenseForm" action="/add-expenses" method="POST">
 <input type="text" name="description" id="descInput" placeholder="Description" required>
 <input type="number" name="amount" id="amountInput" placeholder="Amount" required>

<h2>Expense Tracker Dashboard</h2>

{{#if editMode}}
<form action="/edit-expense/{{editExpense._id}}" method="POST">
    <input type="text" name="description" value="{{editExpense.description}}" required>
    <input type="number" name="amount" value="{{editExpense.amount}}" required>
    <input type="text" name="category" value="{{editExpense.category}}" required>
    <button type="submit">Update</button>
    <a href="/dashboard">Cancel</a>
</form>
{{else}}
<form action="/add-expenses" method="POST">
    <input type="text" name="description" placeholder="Description" required>
    <input type="number" name="amount" placeholder="Amount" required>
    <input type="text" name="category" placeholder="Category" required>
    <button type="submit">Add Expense</button>
</form>
{{/if}}

<table border="1">
    <thead>
        <tr>
            <th>Description</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each expenses}}
        <tr>
            <td>{{this.description}}</td>
            <td>${{this.amount}}</td>
            <td>{{this.category}}</td>
            <td>{{this.date}}</td>
            <td>
                <a href="/edit/{{this._id}}">Edit</a>
                <form action="/delete-expense/{{this._id}}" method="POST" style="display: inline;">
                    <button type="submit" onclick="return confirm('Are you sure?')">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>